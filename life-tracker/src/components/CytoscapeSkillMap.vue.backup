      // Try multiple times with increasing delays to ensure containers are ready
      const tryInitMinimap = (attempt = 1, maxAttempts = 5) => {
        console.log(`üîÑ Minimap initialization attempt ${attempt}/${maxAttempts}`)
        console.log('üì¶ minimapContainer.value:', !!minimapContainer.value)
        console.log('üéØ cy exists:', !!cy)
        
        if (minimapContainer.value && cy) {
          console.log('‚úÖ Both containers ready, initializing minimap...')
          initializeMinimap()
        } else if (attempt < maxAttempts) {
          console.log(`‚è≥ Containers not ready, retrying in ${attempt * 500}ms...`)
          setTimeout(() => tryInitMinimap(attempt + 1, maxAttempts), attempt * 500)
        } else {
          console.warn('‚ùå Failed to initialize minimap after 5 attempts')
        }
      }
      
      // Start the initialization sequence
      tryInitMinimap()
    }
  })
  
